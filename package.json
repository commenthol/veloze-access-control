{
  "name": "@veloze/access-control",
  "version": "1.0.0",
  "description": "Middleware for access-control using @casl/ability",
  "homepage": "http://github.com/commenthol/veloze-access-control",
  "keywords": [
    "RBAC",
    "ABAC",
    "role-based access control",
    "attribute-based access control"
  ],
  "author": "commenthol",
  "sideEffects": false,
  "license": "MIT",
  "type": "module",
  "imports": {
    "#*": {
      "default": "./src/*"
    }
  },
  "exports": {
    "default": "./src/index.js",
    "types": "./types/index.d.ts"
  },
  "files": [
    "src",
    "types"
  ],
  "scripts": {
    "all": "npm-run-all lint test types",
    "test": "mocha '**/*.test.js'",
    "c8": "c8 -r text -r html npm test",
    "lint": "eslint",
    "types": "rimraf types; tsc"
  },
  "dependencies": {
    "veloze": "^1.2.1",
    "@casl/ability": "^6.7.3"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "c8": "^10.1.3",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "globals": "^16.3.0",
    "mocha": "^11.7.1",
    "npm-run-all2": "^8.0.4",
    "rimraf": "^6.0.1",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
